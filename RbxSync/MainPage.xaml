<Page
	x:Class="RbxSync.MainPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="using:RbxSync"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d" RequestedTheme="Dark" FontFamily="Wide Latin">

	<Grid Background="{ThemeResource SystemAccentColor}">
		<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="200">
			<Image Source="/Assets/Logo.png" Height="80" />
			<TextBlock HorizontalAlignment="Center" TextAlignment="Center"
					   FontSize="24" Height="33" Width="200" Text="RbxSync"
					   FontWeight="Light" FontFamily="Segoe UI" />


			<StackPanel Margin="0, 40, 0, 0">
				<Grid>
					<Button Width="90" HorizontalAlignment="Left"
							FontSize="32" Content="&#xE713;" HorizontalContentAlignment="Right"
							Background="Transparent" FontFamily="Segoe MDL2 Assets" />
					<Button Width="90" HorizontalAlignment="Right"
							FontSize="32" Content="&#xE7E8;" HorizontalContentAlignment="Left"
							Background="Transparent" FontFamily="Segoe MDL2 Assets" Margin="100, 0, 0, 0" />
				</Grid>
			</StackPanel>
		</StackPanel>
	</Grid>
</Page>
